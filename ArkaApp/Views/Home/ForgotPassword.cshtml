@{
    ViewBag.Title = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<section class="section">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4>فراموشی رمز عبور</h4>
                    </div>
                    <div class="card-body">
                        <div id="error" class="errorSection" style="display:none;"></div>
                        @using (Html.BeginForm("ForgotPassword", "Home",
                            new AjaxOptions
                            {
                                HttpMethod = "POST"
                            }))
                        {

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false)

                            <div class="form-group">
                                @Html.Label("نام کاربری")
                                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", maxlength = 200, autocomplete = "off", tabindex = "1" } })
                                @Html.ValidationMessage("UserName", "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="3">
                                    ارسال ایمیل بازیابی
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


