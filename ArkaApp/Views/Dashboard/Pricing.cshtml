@model List<ArkaApp.Models.ViewModels.PricingViewModel>
@{
    ViewBag.Title = "قیمت گذاری";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb breadcrumb-style ">
    <li class="breadcrumb-item">
        <h4 class="page-title m-b-0">قیمت گذاری</h4>
    </li>
    <li class="breadcrumb-item">
        <a href="index.html">
            <i class="fas fa-home"></i>
        </a>
    </li>
    <li class="breadcrumb-item" href="/Dashboard/Index">داشبورد</li>
    <li class="breadcrumb-item active">قیمت گذاری</li>
</ul>
<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="col-6">قیمت گذاری</h4>
                </div>
                <div class="card-body">
                    @if (Model.Count > 0)
                    {
                        <p>برخی از پکیج ها شامل موارد انتخابی هستند که به ازای هر یک از آنها مبلغی به قیمت پایه اضافه خواهد شد.</p>
                        <div class="table-responsive">
                            <table class="table table-bordered table-md">
                                <tbody>
                                    <tr>
                                        <th>عنوان</th>
                                        <th>به ازای</th>
                                        <th>قیمت</th>
                                    </tr>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <tr style="background-color:paleturquoise">
                                                <td>@item.Pricing.TitleFa</td>
                                                @if (item.Pricing.Title.Contains("Explore"))
                                                {
                                                    <td>@item.Pricing.Count روز</td>
                                                }
                                                else
                                                {
                                                    <td>@item.Pricing.Count نفر</td>
                                                }
                                                <td>@item.Pricing.Amount.ToString("N0") تومان</td>
                                            </tr>
                                            if (item.Details.Count > 0)
                                            {

                                                foreach (var detail in item.Details)
                                                {
                                                    <tr style="background-color:azure">
                                                        <td style="padding-right:40px;"><i class="fa fa-check"></i>&nbsp;@detail.TitleFa</td>
                                                        @if (item.Pricing.Title.Contains("Explore"))
                                                        {
                                                            <td>@detail.Count روز</td>
                                                        }
                                                        else
                                                        {
                                                            <td>@detail.Count نفر</td>
                                                        }
                                                        <td>@detail.Amount.ToString("N0") تومان</td>
                                                    </tr>
                                                }
                                                <tr>
                                                    <td>قیمت بسته کامل</td>
                                                    <td>@item.Pricing.Count</td>
                                                    <td>@item.Total.ToString("N0") تومان</td>
                                                </tr>
                                            }

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
